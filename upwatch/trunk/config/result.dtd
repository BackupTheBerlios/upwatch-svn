<!ELEMENT result	((ping|httpget|iptraf|sysstat|bb|bb_cpu|mysql|pop3|mssql|postgresql|imap)*)>
<!ATTLIST result	fromhost NMTOKEN #REQUIRED
			date NMTOKEN #REQUIRED
> 

<!ELEMENT host          (hostname,ipaddress?)>
<!ELEMENT hostname      (#PCDATA)>
<!ELEMENT ipaddress     (#PCDATA)>

<!ELEMENT info          (#PCDATA)>


<!ELEMENT blockin (#PCDATA)>		<!-- Amount of blocks read from block devices -->
<!ELEMENT blockout (#PCDATA)>		<!-- Amount of blocks written to block devices -->
<!ELEMENT buffered (#PCDATA)>		<!-- Amount of memory used for OS buffers -->
<!ELEMENT cached (#PCDATA)>		<!-- Amount of memory used for disk buffers -->
<!ELEMENT color (#PCDATA)>		<!-- color as this probe thinks it should be -->
<!ELEMENT connect (#PCDATA)>		<!-- time for connection to complete -->
<!ELEMENT free (#PCDATA)>		<!-- Free memory -->
<!ELEMENT highest (#PCDATA)>		<!-- highest turn-around time -->
<!ELEMENT host (#PCDATA)>		<!-- host where this element originated -->
<!ELEMENT idle (#PCDATA)>		<!-- CPU idle time -->
<!ELEMENT in (#PCDATA)>		<!-- total incoming bytes -->
<!ELEMENT loadavg (#PCDATA)>		<!-- The load average as reported by the system -->
<!ELEMENT lookup (#PCDATA)>		<!-- time needed for DNS lookup -->
<!ELEMENT lowest (#PCDATA)>		<!-- lowest turn-around time -->
<!ELEMENT out (#PCDATA)>		<!-- total outgoing bytes -->
<!ELEMENT pretransfer (#PCDATA)>		<!-- time for any pre-transfer actions -->
<!ELEMENT swapin (#PCDATA)>		<!-- Amount of blocks swapped in from disk -->
<!ELEMENT swapout (#PCDATA)>		<!-- Amount of blocks swapped out to disk -->
<!ELEMENT swapped (#PCDATA)>		<!-- Amount of blocks written to swap device -->
<!ELEMENT system (#PCDATA)>		<!-- CPU system time -->
<!ELEMENT systemp (#PCDATA)>		<!-- System temperature in Celsius -->
<!ELEMENT total (#PCDATA)>		<!-- total time needed -->
<!ELEMENT used (#PCDATA)>		<!-- Amount of memory used by processes -->
<!ELEMENT user (#PCDATA)>		<!-- CPU user time -->
<!ELEMENT value (#PCDATA)>		<!-- Average turn-around time -->
<!ELEMENT value (#PCDATA)>		<!-- Value of OID queried -->

<!-- Big Brother generic probe -->
<!ELEMENT bb	(host,color,info?)>
<!ATTLIST bb	ipaddress NMTOKEN  "127.0.0.1"
	date NMTOKEN  #REQUIRED
	expires NMTOKEN  #REQUIRED
>

<!-- Big Brother System probe -->
<!ELEMENT bb_cpu	(host,color,info?)>
<!ATTLIST bb_cpu	ipaddress NMTOKEN  "127.0.0.1"
	date NMTOKEN  #REQUIRED
	expires NMTOKEN  #REQUIRED
>


<!-- Do a HTTP GET request -->
<!ELEMENT httpget	(color,lookup,connect,pretransfer,total,info?)>
<!ATTLIST httpget	id NMTOKEN  #REQUIRED
	ipaddress NMTOKEN  "127.0.0.1"
	date NMTOKEN  #REQUIRED
	expires NMTOKEN  #REQUIRED
>


<!-- Test a IMAP server, optionally with user/password -->
<!ELEMENT imap	(color,connect,total,info?)>
<!ATTLIST imap	id NMTOKEN  #REQUIRED
	ipaddress NMTOKEN  "127.0.0.1"
	date NMTOKEN  #REQUIRED
	expires NMTOKEN  #REQUIRED
>


<!-- Incoming and outgoing traffic to an IP adddress, network or interface -->
<!ELEMENT iptraf	(in,out,info?)>
<!ATTLIST iptraf	ipaddress NMTOKEN  "127.0.0.1"
	date NMTOKEN  #REQUIRED
	expires NMTOKEN  #REQUIRED
	interval NMTOKEN  "60"
>


