<!-- System information like load average, CPU/MEM usage etc -->
<!ELEMENT sysstat	(color,loadavg,user,system,idle,swapin,swapout,blockin,blockout,swapped,free,buffered,cached,used,systemp,info?)>
<!ATTLIST sysstat	server NMTOKEN  #REQUIRED
	ipaddress NMTOKEN  "127.0.0.1"
	date NMTOKEN  #REQUIRED
	expires NMTOKEN  #REQUIRED
>


