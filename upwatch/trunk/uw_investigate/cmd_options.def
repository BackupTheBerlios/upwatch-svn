AutoGen Definitions options;
export        = "#define progOptions uw_investigateOptions";
prog-name     = uw_investigate;
prog-title    = "Upwatch probe daemon";
version       = "0.3";
homerc        = "/etc/upwatch.conf";
homerc        = "/etc/upwatch.d/uw_investigate.conf";
homerc        = "$HOME/.upwatchrc";
homerc        = "$HOME";
homerc        = "$$/upwatch.conf";
homerc        = "$$/uw_investigate.conf";
detail        = 
'uw_investigate does the following: ';

// this section is for the generated specfile
spec-requires = "libpcap = 0.6.2-13uw mysql glib2 >= 2.0.4 gnet >= 1.1.2 curl >= 7.9.3 libnet >= 1.0.2";
spec-install  = "mkdir -p $RPM_BUILD_ROOT/var/spool/upwatch/uw_investigate/tmp";
spec-install  = "mkdir -p $RPM_BUILD_ROOT/var/spool/upwatch/uw_investigate/new";
spec-install  = "mkdir -p $RPM_BUILD_ROOT/var/spool/upwatch/uw_investigate_work/tmp";
spec-install  = "mkdir -p $RPM_BUILD_ROOT/var/spool/upwatch/uw_investigate_work/new";
spec-files    = "%dir /var/spool/upwatch/uw_investigate/new";
spec-files    = "%dir /var/spool/upwatch/uw_investigate/tmp";
spec-files    = "%dir /var/spool/upwatch/uw_investigate_work/new";
spec-files    = "%dir /var/spool/upwatch/uw_investigate_work/tmp";

// describe commandline flags
flag = {
    name      = spooldir;
    value     = S;
    arg_type  = string;
    descrip   = "maildir-type spooldirectory for result files";
    doc       =
'This probe generates files with data. These are put in maildir style
spooldirectories. This parameter denotes the basedirectory. Inside
this directory a directory `tmp` and `new` should exist. All files
will finally reside in `new`. You should set up some cron job that
removes any files in `tmp` that are older then 36 hours. For some more info
about maildir see http://www.qmail.org/man/man5/maildir.html.';
};

flag = {
    name      = output;
    value     = O;
    arg_type  = string;
    descrip   = "name of queue to drop results";
    doc       =
'The argument is taken to be a maildir under the directory `spooldir`.
All results are placed in this queue.';
};

flag = {
    name      = workqueue;
    value     = Q;
    arg_type  = string;
    descrip   = "name of queue to keep temporary files";
    doc       =
'The argument is taken to be a maildir under the directory `spooldir`.
Probe results currently being investigated are kept here.';
};

#include ../common/generic_options.def
