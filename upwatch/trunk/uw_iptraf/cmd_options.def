AutoGen Definitions options;
export        = "#define progOptions uw_iptrafOptions";
prog-name     = uw_iptraf;
prog-title    = "Upwatch probe daemon";
version       = `cat ../VERSION`;
homerc        = "/etc/upwatch.conf";
homerc        = "/etc/upwatch.d/uw_iptraf.conf";
homerc        = "$HOME/.upwatchrc";
homerc        = "$HOME";
homerc        = "$$/upwatch.conf";
homerc        = "$$/uw_iptraf.conf";
detail        = 
'uw_iptraf does the following: ';

// this section is for the generated specfile
spec-requires = "libpcap glib2 >= 2.0.4";
spec-files    = "%attr(4770,root,upwatch) /usr/sbin/uw_iptraf";

// describe commandline flags
flag = {
    name      = spooldir;
    value     = S;
    arg_type  = string;
    descrip   = "maildir-type spooldirectory for result files";
    doc       =
'This probe generates files with data. These are put in maildir style
spooldirectories. This parameter denotes the basedirectory. Inside
this directory a directory `tmp` and `new` should exist. All files
will finally reside in `new`. You should set up some cron job that
removes any files in `tmp` that are older then 36 hours. For some more info
about maildir see http://www.qmail.org/man/man5/maildir.html.';
};

flag = {
    name      = output;
    value     = O;
    arg_type  = string;
    descrip   = "name of queue to drop results";
    doc       =
'The argument is taken to be a maildir under the directory `spooldir`.
All results are placed in this queue.';
};

flag = {
    name      = interface;
    value     = i;
    stack_arg;
    arg_type  = string;
    descrip   = "name of interface to capture traffic";
    doc       =
'This specifies the name of the interface iptraf should bind to,
and capture packets from';
};

flag = {
    name      = network;
    value     = n;
    arg_type  = string;
    stack_arg;
    descrip   = "internal network in CIDR format";
    doc       =
'iptraf needs to know which network are internal and which are external,
specificy thosr with one or more -n options. Note only CIDR format is supported
(192.168.170.0/24)';
};

#include ../common/generic_options.def
