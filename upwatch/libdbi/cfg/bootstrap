#! /bin/sh

# test if libtoolize is called glibtoolize (MacOSX)
BOGUS=`glibtoolize -n 2>/dev/null`
TEST=$?
if [ $TEST -eq 0 ]
then
	LIBTOOLIZE=glibtoolize
else
	# assume it is just installed
	LIBTOOLIZE=libtoolize
fi

set -x

# libstatgrab
cd libstatgrab-0.13
  aclocal
  autoheader
  $LIBTOOLIZE
  autoconf
  automake --gnu --add-missing
cd ..

aclocal \
&& autoheader \
&& $LIBTOOLIZE \
&& autoconf \
&& automake --gnu --add-missing 

cd xmbmon203
autoconf
cd ..
svnversion . > RELEASE
